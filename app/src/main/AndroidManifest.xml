<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.timsimonhughes.ygam">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Base.MyTheme">
        <activity
            android:name=".Controller.SplashActivity"
            android:theme="@style/SplashTheme"
            tools:ignore="InnerclassSeparator">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Controller.OnboardingActivity"
            android:label="@string/app_name"
            android:theme="@style/OnboardingTheme"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".Controller.DashboardActivity"
            android:label="@string/title_activity_dashboard"
            android:theme="@style/DashboardTheme"
            tools:ignore="InnerclassSeparator" />
    </application>

</manifest>