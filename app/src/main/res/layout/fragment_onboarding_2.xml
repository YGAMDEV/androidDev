<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/colorPrimaryDark"
    tools:context="com.scrabit.ygam.fragments.OnboardingFragment1">

    <TextView
        android:id="@+id/fragment2Title"
        style="@style/AppHeadingTextViewStyle"
        android:layout_marginTop="56dp"
        android:text="@string/fragment_2_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment2Subcopy"
        style="@style/AppSubcopyTextViewStyle"
        android:layout_marginTop="@dimen/unitX2_spacing"
        android:text="@string/fragment_2_subcopy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment2Title" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment2Subcopy"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp">

        <ImageView
            android:id="@+id/fragment2Image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:adjustViewBounds="true"
            android:maxWidth="400dp"
            android:scaleType="fitCenter"
            android:src="@drawable/onboarding_placeholder_image" />

    </FrameLayout>

</android.support.constraint.ConstraintLayout>
