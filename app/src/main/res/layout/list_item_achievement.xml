<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    tools:background="@android:color/white"
    android:focusable="true">

        <ImageView
            android:id="@+id/imageViewAchievementBadge"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/circle"
            android:layout_marginTop="@dimen/unitX2_spacing"
            android:layout_marginEnd="@dimen/unitX2_spacing"
            android:layout_marginStart="@dimen/unitX2_spacing"
            android:layout_marginBottom="@dimen/unitX2_spacing"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/constraintLayoutAchievementTitle"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayoutAchievementTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightGrey"
            app:layout_constraintTop_toBottomOf="@+id/imageViewAchievementBadge"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/textViewAchievementTitle"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginBottom="@dimen/unitX1_spacing"
                    android:layout_marginLeft="@dimen/unitX1_spacing"
                    android:layout_marginRight="@dimen/unitX1_spacing"
                    android:layout_marginTop="@dimen/unitX1_spacing"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/constraintLayoutAchievementTitle"
                    tools:text="Title 1" />

        </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>