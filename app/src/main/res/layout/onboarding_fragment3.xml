<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/colorPrimaryDark"
    tools:context="com.scrabit.ygam.fragments.OnboardingFragment1">


    <TextView
        android:id="@+id/fragment3Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/unitX2_spacing"
        android:layout_marginStart="@dimen/unitX2_spacing"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/rubik_medium"
        android:lineSpacingExtra="4dp"
        android:text="@string/fragment_3_title"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment3Subcopy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="@dimen/unitX2_spacing"
        android:layout_marginTop="@dimen/unitX2_spacing"
        android:fontFamily="@font/rubik"
        android:lineSpacingExtra="10sp"
        android:text="@string/fragment_3_subcopy"
        android:textAlignment="center"
        android:textColor="@color/white90"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment3Title" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment3Subcopy"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp">

        <ImageView
            android:id="@+id/fragment3Image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:adjustViewBounds="true"
            android:maxWidth="400dp"
            android:scaleType="fitCenter"
            android:src="@drawable/onboarding_image_1" />

    </FrameLayout>

</android.support.constraint.ConstraintLayout>
